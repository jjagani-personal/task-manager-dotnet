@page
@model CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Task";
}

<h1>Create Task</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Task.Name"></label>
        <input asp-for="Task.Name" class="form-control" />
        <span asp-validation-for="Task.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.DueDate"></label>
        <input asp-for="Task.DueDate" class="form-control" type="date" />
        <span asp-validation-for="Task.DueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.Frequency"></label>
        <input asp-for="Task.Frequency" class="form-control" />
        <span asp-validation-for="Task.Frequency" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.EstimatedHours"></label>
        <input asp-for="Task.EstimatedHours" class="form-control" type="number" />
        <span asp-validation-for="Task.EstimatedHours" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.PreferredTime"></label>
        <input asp-for="Task.PreferredTime" class="form-control" type="time" />
        <span asp-validation-for="Task.PreferredTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.PreferredPlace"></label>
        <input asp-for="Task.PreferredPlace" class="form-control" />
        <span asp-validation-for="Task.PreferredPlace" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
